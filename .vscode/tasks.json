{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Build Release",
            "type": "shell",
            "command": "scons",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "Build Debug",
            "type": "shell",
            "command": "scons",
            "args": [
                "debug=1"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "Clean All",
            "type": "shell",
            "command": "rm",
            "args": [
                "-r",
                "build"
            ],
            "problemMatcher": []
        },
        {
            "taskName": "Regenerate Data",
            "type": "shell",
            "command": "bash",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
               "-c",
               "\"rm -f *.vtp *.vtr && ./SWE1D\""
            ],
            "problemMatcher": []
        },
        {
            "taskName": "Build Solver Documentation",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "\"doxygen ../documentation/doxygen.cfg && (cd ../documentation/build/latex;make)\""
            ],
            "options": {
                "cwd": "${workspaceRoot}/submodules/solvers/src"
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },
        {
            "taskName": "Run Solver Tests",
            "type": "shell",
            "command": "scons",
            "args": [
                "check"
            ],
            "options": {
                "cwd": "${workspaceRoot}/submodules/solvers"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}/submodules/solvers"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}